{
  "version": 2,
  "builds": [
    { "src": "api/openai.ts", "use": "@vercel/node" },
    { "src": "frontend/**", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "^/api/openai$", "dest": "api/openai.ts" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ],
  "buildCommand": "cd frontend && npm install --no-audit --no-fund && npm run build",
  "outputDirectory": "frontend/dist"
}
