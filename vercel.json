{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node@3"
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^(?!/api/).*", "dest": "/frontend/dist/$1" }
  ],
  "functions": {
    "api/**/*.ts": { "runtime": "nodejs22.x" }
  },
  "env": {
    "OPENAI_API_KEY": "@OPENAI_API_KEY"
  }
}
